@model Models.ViewModels.AdminPanel.DayToDayCalculation
@{
    ViewData["Title"] = "BusinessStatus";
    Layout = "_LayoutAdmin";
}
 

<div class="container-fluid m-auto">
    <div class="m-auto col-lg-9 bg-white p-5 mt-3 mb-3">
        <h1 class="d-flex justify-content-center">Daily Status</h1>
        <div class="table-responsive-md">
        <table class="table-bordered table table-striped">
            <thead>
            <tr class="bg-success text-white">
                <td class="text-center font-weight-bold">Date</td>
                <td class="text-center font-weight-bold">Total Sell </td>
                <td class="text-center font-weight-bold">Total Buying Cost</td>
                <td class="text-center font-weight-bold">Total Cost</td>
                <td class="text-center font-weight-bold">Total Profit</td>
                <td class="text-center font-weight-bold">Total Due</td>
                </tr>
            </thead>
            <script>
                var profit = 0;
            </script>
            <tbody>
                   
               
                    @foreach (var day in @Model.dailyCalculations)
                    {
                        <tr>
                            <td class="text-center">@day.day.Date.ToString("D")</td>
                            <td class="text-center">@day.TotalSell</td>
                            <td class="text-center">@day.TotalBuyingCost</td>
                            <td class="text-center">@day.TotalCost</td>
                            <td class="text-center">@day.TotalProfit</td>
                            <td class="text-center">@day.TotalDue</td>
                        </tr>
                        
                    }
            <tr>
                <td class="text-center bg-danger" >Total</td>
                <td class="text-center bg-light">@Model.TotalSell</td>
                <td class="text-center bg-light">@Model.TotalBuyingCost</td>
                <td class="text-center bg-light">@Model.TotalCost</td>
                <td class="text-center bg-light" id="profit">@Model.TotalProfit</td>
                <td class="text-center bg-light">@Model.TotalDue</td>

            </tr>
                

                
            </tbody>
        </table>
        </div>
    </div>
</div>