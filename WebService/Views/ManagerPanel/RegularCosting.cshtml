@model Models.Entities.Cost
@{
    ViewData["Title"] = "RegularCosting";
    Layout = "_LayoutManager";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Regular Cost</h3></div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
                    <form id="addProductForm" asp-action="RegularCosting" class="" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="small mb-1" for="name">Name</label>
                            <input asp-for="Name" class="form-control py-4" id="name" type="text" placeholder="Enter Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="small mb-1" for="amount">Amount</label>
                            <input asp-for="Amount" class="form-control py-4" id="amount" placeholder="Enter Amount">
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="details">Reason</label>
                            <textarea asp-for="Reason" class="form-control py-4" id="details" type="text" placeholder="Enter Reasons"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 mb-0"><button type="submit" class="customBtn-admin-primary text-white btn-block border-0">Add Cost</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
